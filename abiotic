  <script>
    const items = document.querySelectorAll('.small-img');
    // ÎŸÎ¹ Î±Î²Î¹Î¿Ï„Î¹ÎºÎ¿Î¯ Ï€Î±ÏÎ¬Î³Î¿Î½Ï„ÎµÏ‚
    const correctAlts = ['cloud', 'wind', 'Sun', 'lake', 'ground'];

    items.forEach(img => {
      img.addEventListener('click', () => {
        img.classList.toggle('selected');
      });
    });

    document.getElementById('checkBtn').addEventListener('click', () => {
      const selectedItems = document.querySelectorAll('.small-img.selected');
      const result = document.getElementById('result');
      const resetBtn = document.getElementById('resetBtn');

      let selectedAlts = Array.from(selectedItems).map(img => img.alt);

      if (selectedAlts.length === 0) {
        result.textContent = "âš ï¸ Î•Ï€Î¯Î»ÎµÎ¾Îµ Ï„Î¿Ï…Ï‚ Î‘Î²Î¹Î¿Ï„Î¹ÎºÎ¿ÏÏ‚ Î Î±ÏÎ¬Î³Î¿Î½Ï„ÎµÏ‚!";
        result.style.color = "orange";
        resetBtn.style.display = "inline-block";
        return;
      }

      let hasWrong = selectedAlts.some(alt => !correctAlts.includes(alt));
      let correctSelected = selectedAlts.filter(alt => correctAlts.includes(alt));

      if (hasWrong) {
        result.textContent = "ğŸ¤” Î§Î¼Î¼... Î¾Î±Î½Î±ÏƒÎºÎ­ÏˆÎ¿Ï… Ï„Î¿. Î‘Î½Î®ÎºÎ¿Ï…Î½ ÏŒÎ»Î± ÏŒÏƒÎ± ÎµÏ€Î­Î»ÎµÎ¾ÎµÏ‚ ÏƒÏ„Î¿Ï…Ï‚ Î‘Î²Î¹Î¿Ï„Î¹ÎºÎ¿ÏÏ‚ Î Î±ÏÎ¬Î³Î¿Î½Ï„ÎµÏ‚;";
        result.style.color = "red";
        resetBtn.style.display = "inline-block";
      } else if (correctSelected.length < correctAlts.length) {
        result.textContent = "âš ï¸ Î§Î¼Î¼... ÎºÎ¬Ï„Î¹ Î¾Î­Ï‡Î±ÏƒÎµÏ‚!";
        result.style.color = "orange";
        resetBtn.style.display = "inline-block";
      } else {
        result.textContent = "âœ… ÎœÏ€ÏÎ¬Î²Î¿! Î£Ï„Î¿Ï…Ï‚ Î‘Î²Î¹Î¿Ï„Î¹ÎºÎ¿ÏÏ‚ Î Î±ÏÎ¬Î³Î¿Î½Ï„ÎµÏ‚ Î±Î½Î®ÎºÎ¿Ï…Î½ Ï„Î± Î¼Î· Î¶Ï‰Î½Ï„Î±Î½Î¬ ÏƒÏ„Î¿Î¹Ï‡ÎµÎ¯Î± Ï„Î¿Ï… Î¿Î¹ÎºÎ¿ÏƒÏ…ÏƒÏ„Î®Î¼Î±Ï„Î¿Ï‚, ÏŒÏ€Ï‰Ï‚ Ï„Î¿ Ï†Ï‰Ï‚, Ï„Î¿ Î½ÎµÏÏŒ, Î· Î¸ÎµÏÎ¼Î¿ÎºÏÎ±ÏƒÎ¯Î±, Ï„Î¿ Î­Î´Î±Ï†Î¿Ï‚ ÎºÎ±Î¹ Î¿ Î±Î­ÏÎ±Ï‚";
        result.style.color = "green";
